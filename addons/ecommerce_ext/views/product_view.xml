<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_template_change_uom_form_inherit" model="ir.ui.view">
        <field name="name">product.template.chnage.uom.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="inside">
                <group>
                    <group string="E-commerce Description" name="description">
                        <field name="description_ecommerce" nolabel="1" placeholder="This note is shown in the e-commerce website."/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    
</odoo>
